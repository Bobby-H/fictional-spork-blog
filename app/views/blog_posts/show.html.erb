<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @blog_post.title %>
  </div>
  <div class="panel-body">
    <p>by <%= @blog_post.author %></p>
    <p><%= @blog_post.blog_entry %></p>
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
    Leave a comment
  </div>
  <div class="panel-body">
		by <strong><%= @blog_post.user %></strong>
	</div>
</div>
<div class="panel panel-default">
  <div class="panel-header">
    <h4>Comments</h4>
    <%= @blog_post.comments.each do |comment| %>
      <div class="panel-success">
        <div class="panel-body">
          <p><strong><%= comment.user %></strong> said: </p>
          <p><%= comment.comment_entry %> at <%= comment.created_at.strftime('%m/%d/%Y at %I:%M%p') %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div>
  <%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
  <%= link_to 'Back', blog_posts_path %>
</div>

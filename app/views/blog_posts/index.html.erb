<p id="notice"><%= notice %></p>

<h1>Welcome to Hipsterville, <%= current_user.email %>!</h1>

<div class="row">
  <%= @blog_posts.each do |blog_post| %>
  <div class="col-md-6">
    <div class="panelpanel-default">
      <div class="panelpanel-heading">
        <p><strong><%= link_to blog_post.title, blog_post %></strong> by <%= blog_post.author %></p>
        <div class="posted-at">posted at: <%= blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p') %></div>
      </div>
      <div class="panel-body">
        <p><%= blog_post.blog_entry[0..250] %>...[<%= link_to "Read More", blog_post %>]</p>
      </div>
      <div class="panel-footer">
        <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-warning" %>
        <%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<br>

<%= link_to 'New Blog post', new_blog_post_path %>
